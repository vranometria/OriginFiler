<Window x:Class="OriginFiler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OriginFiler"
        mc:Ignorable="d"
        Title="Origin Filer" Height="450" Width="800" Loaded="Window_Loaded">
    <Window.Resources>
        <SolidColorBrush x:Key="BackGroundColor" Color="#424242"></SolidColorBrush>
    </Window.Resources>
    
    <Grid>
        <Menu Height="21" VerticalAlignment="Top" Background="{StaticResource BackGroundColor}"/>

        <TreeView x:Name="FolderTreeView" ItemsSource="{Binding Items}" HorizontalAlignment="Left" Height="181" Margin="30,68,0,0" VerticalAlignment="Top" Width="122">
            <TreeView.ContextMenu>
                <ContextMenu>
                    <MenuItem x:Name="TreeViewAddMenu" Header="Add" Click="TreeViewAddMenu_Click" Background="{StaticResource BackGroundColor}" Foreground="White"></MenuItem>
                </ContextMenu>
            </TreeView.ContextMenu>
        </TreeView>
        <TabControl x:Name="Tab" Margin="177,68,0,0">
        </TabControl>

    </Grid>
</Window>
