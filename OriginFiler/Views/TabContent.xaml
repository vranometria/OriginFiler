<UserControl x:Class="OriginFiler.Views.TabContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OriginFiler.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListView x:Name="ObjectListView" Margin="10,63,10,10" d:ItemsSource="{d:SampleData ItemCount=5}">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Grid HorizontalAlignment="Center" Height="58" VerticalAlignment="Top" Width="800">
            <TextBox x:Name="FolderPathTextBox" Height="19" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
            <TextBox x:Name="NameFilterTextBox" TextWrapping="Wrap" Text="" Height="19" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="288"/>
        </Grid>

    </Grid>
</UserControl>
