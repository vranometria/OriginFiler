<UserControl x:Class="OriginFiler.Views.Breadcrumb"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OriginFiler.Views"
             mc:Ignorable="d" d:DesignWidth="800" Height="31" Loaded="UserControl_Loaded">
    <Grid>
        <StackPanel  x:Name="DrawArea" Height="29" VerticalAlignment="Top" Orientation="Horizontal" MouseDown="DrawArea_MouseDown"/>
        <TextBox x:Name="DirectoryPathTextBox" Visibility="Hidden" Height="21" Margin="0,1,0,0" TextWrapping="Wrap" VerticalAlignment="Top" LostFocus="DirectoryPathTextBox_LostFocus" KeyDown="DirectoryPathTextBox_KeyDown"/>
    </Grid>
</UserControl>
