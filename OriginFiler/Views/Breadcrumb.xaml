<UserControl x:Class="OriginFiler.Views.Breadcrumb"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OriginFiler.Views"
             MinHeight="20"
             Height="auto"
             mc:Ignorable="d" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Grid>
        <StackPanel  x:Name="DrawArea" Orientation="Horizontal" MouseDown="DrawArea_MouseDown" Margin="0,0,0,2"/>
        <TextBox x:Name="DirectoryPathTextBox" Visibility="Hidden" TextWrapping="Wrap" KeyDown="DirectoryPathTextBox_KeyDown" MouseLeave="DirectoryPathTextBox_MouseLeave" Margin="0,2,0,1"/>
    </Grid>
</UserControl>
