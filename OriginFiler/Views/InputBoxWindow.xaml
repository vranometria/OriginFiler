<Window x:Class="OriginFiler.Views.InputBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OriginFiler.Views"
        mc:Ignorable="d"
        Title="InputBoxWindow" Height="138" Width="281">
    <Grid>
        <Grid Height="43" Margin="10,10,6,0" VerticalAlignment="Top">
            <TextBox x:Name="InputTextBox" TextWrapping="Wrap" Text="" Margin="10,10,10,10"/>
        </Grid>
        <Grid Margin="10,58,6,10">
            <Button x:Name="OkButton" Content="OK" Margin="44,10,0,0" RenderTransformOrigin="0.149,0.386" Background="White" Click="OkButton_Click" Height="34" VerticalAlignment="Top" HorizontalAlignment="Left" Width="55"/>
            <Button x:Name="CancelButton" Content="Cancel" Height="34" Margin="0,0,57,0" VerticalAlignment="Center" RenderTransformOrigin="0.149,0.386" Background="White" Click="CancelButton_Click" HorizontalAlignment="Right" Width="55"/>
        </Grid>

    </Grid>
</Window>
