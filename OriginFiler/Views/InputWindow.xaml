<Window x:Class="OriginFiler.Views.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OriginFiler.Views"
        mc:Ignorable="d"
        Title="フォルダ名" Height="163" Width="352">
    <Grid>
        <TextBox x:Name="NameInputBox" Height="21" Margin="10,10,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <Grid Margin="10,74,10,10">
            <Button x:Name="OkButton" Content="OK" HorizontalAlignment="Left" Height="44" Margin="10,10,0,0" VerticalAlignment="Top" Width="70" Background="White" Click="OkButton_Click"/>
            <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Height="44" Margin="85,10,0,0" VerticalAlignment="Top" Width="70" Background="White" Click="CancelButton_Click"/>
        </Grid>
        <TextBox x:Name="FolderPathInputBox" Height="21" Margin="10,36,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>

    </Grid>
</Window>
